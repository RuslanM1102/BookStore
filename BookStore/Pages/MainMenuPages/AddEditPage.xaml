<Page x:Class="BookStore.Pages.MainMenuPages.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStore.Pages.MainMenuPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage" Loaded="Page_Loaded">

    <Grid Background="{DynamicResource SubBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button x:Name="SaveButton" Content="Сохранить" Style="{DynamicResource DefaultButton}" Click="SaveButton_Click"/>
        </StackPanel>
        <ScrollViewer Grid.Column="1">
            <Grid Name="PropertiesGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                
                
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
